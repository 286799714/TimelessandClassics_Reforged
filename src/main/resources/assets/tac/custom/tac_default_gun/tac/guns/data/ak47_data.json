{
  // 指定枪械弹药
  "ammo": "tac:762x39",
  // 每分钟射出弹药量，最大不应超过 1200
  "rpm": 700,
  "reload": {
    // mag_fed 是弹匣供弹，manual_fed 是手动供弹
    "type": "mag_fed",
    // 空仓换弹：弹匣供弹完成的时间点，单位秒
    // 到达此时间点，服务端应当更新枪内子弹数量
    "empty_mag_fed_time": 2.25,
    // 战术换弹：弹匣供弹完成的时间点，单位秒
    // 到达此时间点，服务端应当更新枪内子弹数量
    "normal_mag_fed_time": 1.55,
    // 空仓换弹：普通供弹完成的时间点，单位秒
    // 到达此时间点，服务端应当更新枪内子弹数量
    "empty_reload_time": 2.6,
    // 战术换弹：普通供弹完成的时间点，单位秒
    // 到达此时间点，服务端应当更新枪内子弹数量
    "normal_reload_time": 2.0
  },
  // 枪械抬起的动作时长，单位秒。
  // 抬起动作完成后，枪械可以进行开火、检视等行为
  "draw_time": 0.35,
  // 瞄准时长，单位秒。
  "aim_time": 0.3,
  // 开火模式
  "fire_mode": [
    // 全自动
    "auto",
    // 半自动
    "semi"
  ],
  // 后坐力
  "recoil": {
    // 竖直方向偏转，会在两个数值之间取随机数
    // 遵循游戏内坐标系，上为正
    "pitch": [
      0.5,
      0.7
    ],
    // 水平方向偏转，会在两个数值之间取随机数
    // 遵循游戏内坐标系，右为正
    "yaw": [
      -0.1,
      0.1
    ]
  },
  // 不准确度
  "inaccuracy": {
    // 站立射击散布
    "stand": 2,
    // 移动射击散布
    "move": 4,
    // 潜行射击散布
    "sneak": 1,
    // 趴下射击散布
    "lie": 0.5,
    // 瞄准射击时散布
    "aim": 0.2
  }
}